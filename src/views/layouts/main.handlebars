<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <style>
      form { max-width: 600px;margin:auto; } h1 { text-align:center;}
    </style>

    <title>Web search</title>
  </head>

  <body class="">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Web Search</a>

          <ul class="navbar-nav">

            {{#unless isLoggedIn}}
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
            {{/unless}}
            {{#if isLoggedIn}}
              <li class="nav-item">
                <a class="nav-link" href="/add-site">Add Site</a>
              </li>
              <li class="ms-4 nav-item d-inline-flex align-items-center gap-2 justify-content-center">
                <a class="btn btn-outline-primary" href="/logout">logout</a>
              </li>
            {{/if}}

          </ul>
        </div>
      </nav>

      {{#if message}}
        <p class="alert alert-danger">{{message}}</p>
      {{/if}}
      {{{body}}}
    </div>
  </body>
</html>